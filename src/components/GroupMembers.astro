---
import type { IProfile } from '../models/profile/profile.interfaces';

interface Props{
    members: IProfile[];
}

const { members } = Astro.props;
---
<div>
    {
        members.map((member) => (
            <article>
                <a href={`/?user=${member.id}`} class="flex justify-between gap-3 px-6 py-6 mb-4 bg-neutral-800 rounded-lg cursor-pointer hover:shadow-xl group">
                    <header>
                        <h2 class="text-base font-bold">{member.name}</h2>
                        <p class="text-xs mt-2 text-white/45">{member.description}</p>
                    </header>
                    <aside class="flex items-center justify-center">
                        <span class="text-white rounded-full bg-neutral-900 px-2 py-2 w-full group-hover:bg-amber-400 text-xs font-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                                <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 0 1-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 0 1 1.06-1.06l7.5 7.5Z" clip-rule="evenodd" />
                            </svg>
                        </span>
                    </aside>
                </a>
            </article>
        ))
    }
</div>