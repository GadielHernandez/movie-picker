---
import type { IProfile } from '../models/profile/profile.interfaces';

interface Props{
    members: IProfile[];
}

const { members } = Astro.props;
console.log(members);
---
<div>
    {
        members.map((member) => (
            <article>
                <a href={`/?user=${member.id}`} class="flex justify-between gap-3 px-6 py-6 mb-4 bg-neutral-800 rounded-lg cursor-pointer hover:shadow-xl group">
                    <header class="flex items-center">
                        <div class="w-14 h-14 rounded-full overflow-hidden mr-4">
                            <img src={`/img/avatar/${member.image || 'avatar-7.png'}`} alt={member.name} class="w-full h-full object-cover" />
                        </div>
                        <div>
                            <h2 class="text-base font-bold flex items-center gap-2">
                                {member.name}
                                <span class={ `${!member.verified && 'hidden' } text-amber-500` }>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                                        <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm13.36-1.814a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                            </h2>
                            <p class="text-xs mt-1 text-white/45">{member.description}</p>    
                        </div>
                    </header>
                    <aside class="hidden md:flex items-center justify-center">
                        <span class="text-white rounded-full bg-neutral-900 px-2 py-2 w-full group-hover:bg-amber-400 text-xs font-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                                <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 0 1-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 0 1 1.06-1.06l7.5 7.5Z" clip-rule="evenodd" />
                            </svg>
                        </span>
                    </aside>
                </a>
            </article>
        ))
    }
</div>