---
import type { IProfile } from '../models/profile/profile.interfaces';

interface Props{
    members: IProfile[];
}

const { members } = Astro.props;
---
<div>
    {
        members.map((member) => (
            <article>
                <a href={`/?user=${member.id}`} class="flex justify-between px-6 py-6 mb-4 bg-neutral-800 rounded-lg cursor-pointer hover:shadow-xl group">
                    <header>
                        <h2 class="text-base font-bold">{member.name}</h2>
                        <p class="text-xs mt-2 text-white/45">{member.description}</p>
                    </header>
                    <aside class="flex items-center justify-end text-amber-400">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                            <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm4.28 10.28a.75.75 0 0 0 0-1.06l-3-3a.75.75 0 1 0-1.06 1.06l1.72 1.72H8.25a.75.75 0 0 0 0 1.5h5.69l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3Z" clip-rule="evenodd" />
                        </svg>
                    </aside>
                </a>
            </article>
        ))
    }
</div>