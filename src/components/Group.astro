---
interface Props {
    title: string;
    description?: string;
    members?: number;
}

const { title, description, members } = Astro.props;
---
<article class="flex justify-between shadow-xl rounded-lg bg-neutral-800 p-6 col-span-1">
    <header>
        <h2 class="text-lg font-bold">{ title }</h2>
        <p class="max-h-14 max-w-[550px] text-xs my-4 truncate text-white/50">
            <span class="text-white/70">Creado por:</span> { description }
        </p>
    </header>
    <aside class="flex flex-col md:flex-row justify-between gap-3 items-center">
        <div class="text-white/50 rounded-full bg-neutral-900 px-3 py-3 w-full flex items-center gap-2">
            <span class="text-xs font-bold">
                {members} 
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3 h-3">
               <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
            </svg>
        </div>
        <button class="text-white rounded-full bg-amber-500 px-3 py-1 w-full">
            <span class="text-xs font-bold">
                Abrir
            </span>
        </button>
    </aside>
</article>