---
interface Props {
    id: string;
    title: string;
    description?: string;
    members?: number;
}

const { id, title, description, members } = Astro.props;
---
<article class="rounded-lg bg-neutral-800 p-6 col-span-1 hover:shadow-xl shadow-black group cursor-pointer">
    <a href={`/group?id=${id}`} class="flex justify-between gap-4">
        <header>
            <h2 class="font-bold">{ title }</h2>
            <p class="max-h-14 max-w-[550px] text-xs mt-2 truncate text-white/50">
                <span class="text-white/70">Creado por:</span> { description }
            </p>
        </header>
        <aside class="flex justify-between items-center">
            <span class="text-white rounded-full bg-neutral-900 px-2 py-2 w-full group-hover:bg-amber-400 text-xs font-bold">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                    <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 0 1 0 1.06l-7.5 7.5a.75.75 0 0 1-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 0 1 1.06-1.06l7.5 7.5Z" clip-rule="evenodd" />
                </svg>
            </span>
        </aside>
    </a>
</article>